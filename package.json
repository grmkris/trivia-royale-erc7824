    "clearnode:stop": "docker-compose down",
    "clearnode:logs": "docker-compose logs -f clearnode"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.8",
    "@biomejs/biome": "2.2.5",
