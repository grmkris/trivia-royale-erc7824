{
  "name": "trivia-royale",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/grmkris/trivia-royale-erc7824"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
